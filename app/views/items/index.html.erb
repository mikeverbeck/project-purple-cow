<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-10">
    <h1>Items</h1>
  </div>
  <div class="col-2">
    <%= link_to "New item", new_item_path %>
  </div>
</div>

<div id="items">
  <% @items.each do |item| %>
    <div class="mt-3">
      <%= link_to item.name, item%>
      <%= render item %>
    </div>
  <% end %>
</div>

